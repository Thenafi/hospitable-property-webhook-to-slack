# Hospitable Webhook Handler - Apache Configuration

# Enable mod_rewrite
<IfModule mod_rewrite.c>
    RewriteEngine On
    
    # Enforce HTTPS
    RewriteCond %{HTTPS} off
    RewriteRule ^(.*)$ https://%{HTTP_HOST}%{REQUEST_URI} [L,R=301]
</IfModule>

# Set PHP Configuration
<IfModule mod_php.c>
    # Memory limit for webhook processing
    php_value memory_limit 32M
    
    # Maximum execution time (10 seconds for webhooks)
    php_value max_execution_time 10
    
    # Allow large JSON payloads
    php_value post_max_size 10M
    php_value upload_max_filesize 10M
    
    # Error reporting (production)
    php_value error_reporting E_ALL
    php_value display_errors Off
</IfModule>

# Security Headers
<IfModule mod_headers.c>
    # Prevent MIME type sniffing
    Header set X-Content-Type-Options "nosniff"
    
    # Enable XSS protection
    Header set X-XSS-Protection "1; mode=block"
    
    # Deny framing
    Header set X-Frame-Options "DENY"
    
    # Disable referrer leaking
    Header set Referrer-Policy "strict-origin-when-cross-origin"
</IfModule>

# Protect sensitive files
<FilesMatch "^\.(env|htaccess|git|gitignore)$|\.log$">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</FilesMatch>

# Protect .env files
<Files ".env*">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</Files>

# Protect Webhook History (Contains PII)
<Files "webhook_history.json">
    <IfModule mod_authz_core.c>
        Require all denied
    </IfModule>
    <IfModule !mod_authz_core.c>
        Order allow,deny
        Deny from all
    </IfModule>
</Files>

# Allow PHP files to be executed
<FilesMatch "\.php$">
    <IfModule mod_authz_core.c>
        Require all granted
    </IfModule>
</FilesMatch>

# Set correct MIME types
<IfModule mod_mime.c>
    AddType application/json .json
    AddType application/javascript .js
</IfModule>

# Gzip compression for better performance
<IfModule mod_deflate.c>
    AddOutputFilterByType DEFLATE text/plain
    AddOutputFilterByType DEFLATE text/html
    AddOutputFilterByType DEFLATE text/xml
    AddOutputFilterByType DEFLATE text/css
    AddOutputFilterByType DEFLATE text/javascript
    AddOutputFilterByType DEFLATE application/xml
    AddOutputFilterByType DEFLATE application/xhtml+xml
    AddOutputFilterByType DEFLATE application/rss+xml
    AddOutputFilterByType DEFLATE application/javascript
    AddOutputFilterByType DEFLATE application/json
</IfModule>

# Caching
<IfModule mod_expires.c>
    ExpiresActive On
    ExpiresByType text/html "access plus 1 hour"
    ExpiresByType application/json "access plus 1 day"
    ExpiresByType application/javascript "access plus 1 day"
</IfModule>

# Prevent directory listing
Options -Indexes
